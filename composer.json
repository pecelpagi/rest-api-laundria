{
	"description": "The CodeIgniter framework",
	"name": "codeigniter/framework",
	"type": "project",
	"homepage": "https://codeigniter.com",
	"license": "MIT",
	"support": {
		"forum": "http://forum.codeigniter.com/",
		"wiki": "https://github.com/bcit-ci/CodeIgniter/wiki",
		"slack": "https://codeigniterchat.slack.com",
		"source": "https://github.com/bcit-ci/CodeIgniter"
	},
	"scripts": {
		"open:coverage": "xdg-open ./application/tests/build/coverage/index.html",
		"open:coverage:mac": "open ./application/tests/build/coverage/index.html",
		"test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit -c application/tests --verbose"
	},
	"require": {
		"php": "^7.2",
		"firebase/php-jwt": "^6.0",
		"chriskacerguis/codeigniter-restserver": "^3.1",
		"vlucas/phpdotenv": "^3.3"
	},
	"suggest": {
		"paragonie/random_compat": "Provides better randomness in PHP 5.x"
	},
	"require-dev": {
		"mikey179/vfsstream": "1.6.*",
		"phpunit/phpunit": "4.* || 5.* || 9.*",
		"kenjis/ci-phpunit-test": "^3.0"
	}
}
